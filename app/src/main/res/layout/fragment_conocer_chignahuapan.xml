<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".conocerChignahuapanFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/logo_pueblos" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_titulo1"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Chignahuapan"
                    android:textStyle="bold"
                    android:textSize="35sp"
                    android:gravity="center"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:src="@drawable/chignahuapan"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">


            <LinearLayout
                android:layout_width="206dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/viveMagia"
                    android:layout_width="150dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:background="@drawable/foma_boton"
                    android:backgroundTint="@color/azul"
                    android:padding="8dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/btvivemagia"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/iglesia_de"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:id="@+id/btxvivemagia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vive Su Magia"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_gravity="center_vertical"
                        android:paddingStart="8dp"
                        android:textColor="@color/negro" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/comida"
                    android:layout_width="150dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:background="@drawable/foma_boton"
                    android:backgroundTint="@color/naranja"
                    android:padding="8dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/bicomida"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/comida"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:id="@+id/btcomida"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gastronomia Local"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_gravity="center_vertical"
                        android:paddingStart="8dp"
                        android:textColor="@color/negro" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/festivida"
                    android:layout_width="150dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:background="@drawable/foma_boton"
                    android:backgroundTint="@color/morado"
                    android:padding="8dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/bifestividad"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/festival"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:id="@+id/btfestivida"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gastronomia Local"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_gravity="center_vertical"
                        android:paddingStart="8dp"
                        android:textColor="@color/negro" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="206dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/actividades"
                    android:layout_width="150dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:background="@drawable/foma_boton"
                    android:backgroundTint="@color/verde"
                    android:padding="8dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/biactividades"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/paisaje"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:id="@+id/btactividades"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Atractivos Actividades"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_gravity="center_vertical"
                        android:paddingStart="8dp"
                        android:textColor="@color/negro" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/hotel"
                    android:layout_width="150dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:background="@drawable/foma_boton"
                    android:backgroundTint="@color/gris"
                    android:padding="8dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/bihotel"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/hotel"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:id="@+id/bthotel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hoteles"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_gravity="center_vertical"
                        android:paddingStart="8dp"
                        android:textColor="@color/negro" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ruta"
                    android:layout_width="150dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:background="@drawable/foma_boton"
                    android:backgroundTint="@color/rosa"
                    android:padding="8dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/biruta"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ruta"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:id="@+id/btruta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ruta"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_gravity="center_vertical"
                        android:paddingStart="8dp"
                        android:textColor="@color/negro" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>