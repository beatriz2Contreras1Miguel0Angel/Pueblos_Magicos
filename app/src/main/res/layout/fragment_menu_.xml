<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu_Fragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/logo_pueblos" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Magia De"
                    android:textStyle="bold"
                    android:textSize="35sp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="111dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Puebla"
                    android:textStyle="bold"
                    android:textSize="35sp"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hola"
                android:textStyle="bold"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Â¿Que te gustaria conocer?"
                android:textStyle="bold"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/atlixto"
                    android:layout_width="280dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:background="@drawable/foma_boton"
                    android:backgroundTint="@color/azul"
                    android:padding="10dp"
                    android:gravity=""
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/btatlixco"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:src="@drawable/atlixco"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:id="@+id/btaatlico"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Atlixco"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_gravity="center_vertical"
                        android:paddingStart="8dp"
                        android:textColor="@color/negro" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/chignahuapan"
                    android:layout_width="280dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:background="@drawable/foma_boton"
                    android:backgroundTint="@color/verde"
                    android:padding="8dp"
                    android:gravity=""
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/btvivemagia"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:src="@drawable/chignahuapan"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:id="@+id/btxvivemagia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chignahuapan"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_gravity="center_vertical"
                        android:paddingStart="8dp"
                        android:textColor="@color/negro" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cholula"
                    android:layout_width="280dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:background="@drawable/foma_boton"
                    android:backgroundTint="@color/naranja"
                    android:padding="8dp"
                    android:gravity=""
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/btcholula"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:src="@drawable/cholula"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:id="@+id/btxcholula"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cholula"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_gravity="center_vertical"
                        android:paddingStart="8dp"
                        android:textColor="@color/negro" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
