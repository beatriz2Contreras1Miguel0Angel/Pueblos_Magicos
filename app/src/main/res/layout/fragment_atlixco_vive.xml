<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".atlixcoViveFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/logo_pueblos" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Vive Su Magia"
                    android:textStyle="bold"
                    android:textSize="35sp"  />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/viveMagia"
                android:layout_width="298dp"
                android:layout_height="220dp"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:background="@drawable/border_only"
                android:padding="16dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- El TextView para el texto largo -->
                    <TextView
                        android:id="@+id/btxvivemagia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="4dp"
                        android:padding="8dp"
                        android:text="Su magia\n\nEste pueblo comparte su paisaje con un volcán, el Popocatépetl. No importa si se está en una terraza o en la punta del Cerro de San Miguel, el gigante siempre aparece a lo lejos con su nube de humo, y su presencia acompaña el vaivén de los días en este rincón poblano."
                        android:textAlignment="textStart"
                        android:textColor="@color/negro"
                        android:textSize="12sp" />
                </ScrollView>

            </LinearLayout>
            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:src="@drawable/atlixco2" />

            <LinearLayout
                android:id="@+id/viveMagia3"
                android:layout_width="298dp"
                android:layout_height="220dp"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:background="@drawable/border_only"
                android:padding="16dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- El TextView para el texto largo -->
                    <TextView
                        android:id="@+id/btxvivemagia3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="4dp"
                        android:padding="8dp"
                        android:text="El motivo\n\nVarias órdenes religiosas acudieron entonces y fundaron las iglesias que hoy seguimos admirando.\nPor su ubicación en las fértiles faldas del volcán, Atlixco llegó a ser una prominente zona agrícola durante el Virreinato."
                        android:textAlignment="textStart"
                        android:textColor="@color/negro"
                        android:textSize="12sp" />
                </ScrollView>

            </LinearLayout>

            <WebView
                android:id="@+id/youtube_webview"
                android:layout_width="298dp"
                android:layout_height="200dp"
                android:layout_marginTop="8dp" />

        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</FrameLayout>